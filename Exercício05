package Unisociesc;

import java.util.Scanner;

public class Exerc05douglas {
	
	public static void main(String[] args) {
		
		// Sem scanner
		int base1 = 30;
		int altura1 = 60;
		int area1;
		
		area1 = (base1 * altura1) / 2;
		System.out.println("Resultado é: " + area1);
		
		// Com scanner	
		int base2;
		int altura2;
		int area2;
		
		Scanner entrada = new Scanner(System.in);
		System.out.println("Diga a base: ");
		base2 = entrada.nextInt();
		System.out.println("Diga a altura: ");
		altura2 = entrada.nextInt();
		
		area2 = (base2 * altura2) / 2;
		System.out.println("Resultado é: " + area2);
		
		entrada.close();	
		
	}

}
