package Unisociesc;

import java.util.ArrayDeque;
import java.util.Deque;
import java.util.Scanner;

public class AtividadeEntregaPilha {
	
	public static void main(String[] args) {
		
		String empilharDesempilhar = "";
		String caixa[] = new String[10];
		
		Scanner entrada = new Scanner(System.in);
		Deque<String> caixas = new ArrayDeque<>();
					
		for (int i = 0; i < caixa.length; i++) {
			System.out.println("caixa " + (i + 1));
			caixa[i] = entrada.next();
			System.out.println("VocÃª deseja empilhar ou desempilhar as caixas? ");
			empilharDesempilhar = entrada.next();	
			if(empilharDesempilhar == "empilhar") {
				System.out.println(caixas.peek());
				if(empilharDesempilhar == "desempilhar") {
					System.out.println(caixas.poll());
				}
			} 
		}
								
		}
	
	double altura;
	double largura;
	double profundidade;
	String fragilOuNao;
	
	}
